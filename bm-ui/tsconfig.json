{
    "compilerOptions": {
      "target": "es2016",
      "jsx": "react",
      "module": "ESNext",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "baseUrl": "./",
      "paths": {
        "components/*": ["package/components/*"],
      },
    },
    "include": ["package/**/*", "typings.d.ts"],
    "exclude": ["node_modules"]
  }
  